package br.sp.senai.jandira.calcular_figuras.model;

public class Circuferencia {
	public double raio ;

	public double raio { 

	
	public void setRaio { 
		this.raio = raio;
	}
	
	public double getRaio { 
		return raio;
	}
	
	public double calcularAreaCircunferencia(){
		double area = Math.PI * (raio * raio);
		return area;
	}
	
	
	
	public void exibirResultado () {
		System.out.println('============');
		System.out.println("Área da Circuferência: " + calcularAreaCircuferencia());
		System.out.println('============');
	}
}
