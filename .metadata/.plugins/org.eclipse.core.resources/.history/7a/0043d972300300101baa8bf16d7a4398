package br.sp.senai.jandira.calcular_figuras.model;

public class Retangulo {
	private double base;
	private double altura;
	
	public void setAltura { 
		this.altura = altura;
	}
	
	public double getAltura { 
		return altura;
	}
	
	public void setBase { 
		this.base = base;
	}
	
	public double getBase { 
		return base;
	}
	
	public double calcularAreaPerimetro(){
		double area = lado * altura;
		return area;
	}

	public double calcularPerimetroRetangulo() { 
		double perimetro = (base * 2) + (altura * 2);
		return perimetro;
	}
	
	public void exibirResultado {
		System.out.println('============');
		System.out.println("Área do Retângulo: " + calcularAreaRetangulo());
		System.out.println("Perimetro do Retângulo: " + calcularPerimetroRetangulo());
		System.out.println('============');
	}
	
}
